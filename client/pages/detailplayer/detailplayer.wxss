/* pages/player/player.wxss */
 page{ 
  height: 100%;
  width: 100%;
  background: #F5F5DC;
 }

.albumbox {
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 250rpx;
  padding: 20rpx 0rpx;
  box-shadow: 0rpx 0rpx 20rpx 3rpx #e1e1e1;
}

.albumimg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 20rpx 3rpx #e1e1e1;
  float: left;
  margin-left: 20rpx;
  position: relative;
}

.albumimg image{
  width: 98%;
  height: 98%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto auto;
}

.albumInfo{
  width: 510rpx;
  height: 100%;
  float: right;
}
.albumname {
  width: 100%;
  height: 50rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
}

.albumdir {
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: -moz-box;
  display: -o-box;
  display: -ms-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  -moz-line-clamp: 3;
  -moz-box-orient: vertical;
  -o-line-clamp: 3;
  -o-box-orient: vertical;
  -ms-line-clamp: 3;
  -ms-box-orient: vertical;
}

.contral {
  width: 480rpx;
  padding-top: 50rpx;
  height: 30rpx;
  margin: 22rpx auto 44rpx;
  position: relative;
}

