 .timeBar{
	position: relative;
	flex: auto;
	height: 4rpx;
	overflow: hidden;
	background: #cfced1;
}
.timeBar .playTime{
	position: absolute;
	left: -100%;
	width: 100%;
	height: 100%;
	background: #31c27c;
	transition: all 1s linear;
} 

.st, .tt {
  width: 74rpx;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
}

.st {
  float: left;
}

.tt {
  float: right;
}


.bg{
  width: 100%;
  height: 100%;
  color: #666;
  font-size: 28rpx;
}

.playbb {
  width: 500rpx;
  margin: 0rpx 180rpx;
}

.playbb .btn {
  width: 150rpx;
  height: 100%;
  position: relative;
  float: left;
}

.playbb image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto auto;
}

.playbb .collect image{
  width: 45rpx;
  height: 45rpx;
  margin-left: 250rpx;
  margin-top: 15rpx;
}

.playbb .play image {
  width:45rpx;
  height: 45rpx;
  margin-top: 15rpx;
}

