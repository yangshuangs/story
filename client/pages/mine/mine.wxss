/* pages/mine/mine.wxss */
.whole{
  height: 100%;
  background: #F5F5F5;
}
.container{
   height: 100%;
   background: #B2DFEE;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userstyle {
  padding: 25rpx 40rpx;
  background: #fff;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-style: solid;
  border-color: #F5F5F5;
  display: flex;
  align-items: center;
}

.userTextStyle {
  color: #4a4a4a;
  font-size: 26rpx;
  line-height: 1.42857;
  flex: 1;
}

.righthead:after{

  content: '';
  /*即不把兄弟挤下去 又能设置自己的style  inline不能设置大小 block会挤下去 所以有了inline-block*/
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A3A3A3;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;
}

.user-maixiangMember {
  border-width: 17rpx 0rpx 10rpx 0rpx;
  border-style: solid;
  border-color: #EFEFF5;
  display: flex;
  align-items: center;
}
.collect{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: #EFEFF5; 
}
.collect_item{
  display: flex;
  flex-direction:column;
}

.list{
  background: #fff;
  width:250rpx;
  height: 250rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 20rpx auto 0rpx;
  position: relative;
  box-shadow: 0rpx 0rpx 20rpx 3rpx #e1e1e1;
}
.list image{
  position: absolute;
  height: 200rpx;
  width: 200rpx;
  margin-left: 25rpx;
  margin-top: 10rpx;
}

.albumname{
  width: 100%;
  height: 66rpx;
  background: rgba(0, 0, 0, 0.6);
  font-size: 28rpx;
  line-height: 66rpx;
  text-indent: 20rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
}
